/dts-v1/;
/include/ "zynq-7000.dtsi"

/ {
	model = "Video Sniffer";
	compatible = "xlnx,zynq-7000";

	aliases {
		ethernet0 = &gem0;
		serial0 = &uart1;
		spi0 = &qspi;
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x20000000>;
	};

	chosen {
		bootargs = "console=ttyPS0,115200 root=/dev/ram rw earlyprintk";
		linux,stdout-path = "/amba/serial@e0001000";
	};

	amba {
		fpga-axi@0 {
			compatible = "simple-bus";
			#address-cells = <0x1>;
			#size-cells = <0x1>;
			ranges;

			vsniffdatavdma:axivdma@43000000 {
				compatible = "xlnx,axi-vdma-1.00.a";
				#address-cells = <0x1>;
				#size-cells = <0x1>;
				#dma-cells = <0x1>;
				#dma-channels = <0x1>;
				reg = <0x43000000 0x1000>;
				xlnx,num-fstores = <0x1>;
				xlnx,flush-fsync = <0x1>;

				dma-channel1@43000000 {
					compatible = "xlnx,axi-vdma-s2mm-channel";
					interrupts = <0x0 0x1d 0x4>;
					xlnx,datawidth = <0x20>;
					xlnx,genlock-mode = <0x0>;
					xlnx,include-dre = <0x0>;
				};
			};

			vsniffdata@0x7a200000 {
				compatible = "vsniff,video-sniffer-data";
				reg = <0x7a200000 0x10000>;
				dmas = <&vsniffdatavdma 0x1>;
				dma-names = "captured-video";
			};
		};
	};
};

&qspi {
	status = "okay";
	is-dual = <0>;
	num-cs = <1>;
	flash@0 {
		compatible = "n25q128a11";
		reg = <0x0>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <1>;
		partition@qspi-fsbl-uboot {
			label = "qspi-fsbl-uboot";
			reg = <0x0 0x100000>;
		};
		partition@qspi-linux {
			label = "qspi-linux";
			reg = <0x100000 0x500000>;
		};
		partition@qspi-device-tree {
			label = "qspi-device-tree";
			reg = <0x600000 0x20000>;
		};
		partition@qspi-rootfs {
			label = "qspi-rootfs";
			reg = <0x620000 0x5E0000>;
		};
		partition@qspi-bitstream {
			label = "qspi-bitstream";
			reg = <0xC00000 0x400000>;
		};
	};
};

&usb0 {
	status = "okay";
	dr_mode = "host";
	phy_type = "ulpi";
};

&gem0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&ethernet_phy>;

	ethernet_phy: ethernet-phy@3 {
		reg = <3>;
	};
};

&sdhci0 {
	status = "okay";
	broken-cd = <0x1>;
	wp-inverted = <0x1>;
};

&uart1 {
	status = "okay";
};
